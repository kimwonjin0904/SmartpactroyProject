<Window x:Class="SensorMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="센서 모니터링" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="실시간 센서 모니터링" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock x:Name="LatestValueText" FontSize="14" FontWeight="SemiBold" Foreground="DarkBlue" />

            <DataGrid x:Name="SensorDataGrid" AutoGenerateColumns="True" Height="250" Margin="0,10,0,0" />

        </StackPanel>
    </Grid>
</Window>
